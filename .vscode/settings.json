{
    "terminal.integrated.env.windows": {
        "CMDER_ROOT": "${env:HomePath}\\AppData\\Local\\cmder",
        "RUBY_HOME": "${env:HomePath}\\AppData\\Local\\Ruby27-x64"
    },
    "terminal.integrated.env.osx": {
        // echo $RUBY_HOME
        "RUBY_HOME": "${env:HOME}/.rvm/gems/ruby-2.7.2"
    },
    "terminal.integrated.profiles.windows": {
      "GitBash Cmder": {
        "path": "${env:HomePath}\\AppData\\Local\\cmder\\vendor\\git-for-windows\\bin\\bash.exe",
        "icon": "terminal-bash"
      },
      "Cmder: External": {
        "path": "${env:HomePath}\\AppData\\Local\\cmder\\Cmder.exe"
      },
      "Git Bash": {
        "path": ["C:\\Program Files\\Git\\bin\\bash.exe"],
        "source": "Git Bash",
        "icon": "terminal-bash"
      },
    },
    // "terminal.integrated.defaultProfile.windows": "Cmder: External",
    // "terminal.integrated.defaultProfile.windows": "GitBash Cmder",
    "editor.renderWhitespace": "boundary",
    "editor.tabSize": 2,
    "ruby.useBundler": true,            // run non-lint commands with bundle exec
    "ruby.useLanguageServer": true,     // use the internal language server (see below)
    "ruby.lint": {
      "reek": {
        "useBundler": true          // enable reek via bundler
      }
    },
    "ruby.format": "rubocop",           // use rubocop for formatting
    "cucumberautocomplete.steps": [
      "features/step_definitions/*.rb",
      // "features/step_definitions/**/*.rb"
    ],
    "cucumberautocomplete.syncfeatures": "features/specs/*.feature",
    "cucumberautocomplete.strictGherkinCompletion": true
  }
  